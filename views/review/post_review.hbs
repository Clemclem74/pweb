{{#each errors}}

<div class="alert alert-danger" role="alert">
       {{msg}}
</div>

{{/each}}


<h2>Bienvenue dans le formulaire de post d'avis : </h2>

<form method="POST" action='/review/post_review/{{ filmid }}'>
    <div class="form-group">
        <label for="title">Note</label>
        <input type="number" id="grade" name="grade" class="form-control" min="0" max="5" >
    </div>
    <div class="form-group">
        <label for="review">Commentaire</label>
        <input type="text" id="review" name="review" class="form-control" >
    </div>
    <hr>
    <input type="submit" class="btn btn-success" value="Save">
</form>


