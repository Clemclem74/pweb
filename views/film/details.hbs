<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link rel="stylesheet" href="/css/details.css" >

<div id="bloc-detail" class="container">

    <div class="row">
    <div class="col-sm-3">
        <img id="img-detail" src="/uploads/{{film.picture}}" alt="Image not found" style="width:100%">
    </div>
    <div class="col-sm-9">

        <h2 id="title-detail">{{ film.title }}</h2>
     
        <hr>

        <div id="buttons-detail">
            {{#if user.isAdmin}}
            <a href="/edit/{{film._id}}" class="btn btn-primary">Modifier</a>
            <a href="/delete/{{film._id}}" class="btn btn-primary">Supprimer</a>

            {{/if}}
            {{#if user }}
                <a href="/review/post_review/{{film._id}}" class="btn btn-info">Poster un avis sur ce film</a>
                <a href="/recommend/{{film._id}}" class="btn btn-info">recommender ce film</a>
                {{#if see}}
                    <a href="/seen/delete/{{film._id}}"><button class="btn btn-success" id="button-seen" type="submit">Déjà vu<span id="seen-button"><i class="fas fa-eye-slash"></i></span></button></a>
                {{else}}
                    <form action="/seen/{{film._id}}" method="POST">
                    <a href="/seen/{{film._id}}"><button class="btn btn-warning" id="button-seen" type="submit">Pas encore vu<span id="seen-button"> <i class="fas fa-eye"></i></span></button></a>
                    </form>
                {{/if}}
            {{/if}}
            
        </div> 


        <small><p id="detail-grade">Note : {{grade}} / 5</p></small>
        <small><p class="lead" id="description">
            Description : {{ film.description}}
        </p></small>
        <h3 id="type-detail">Type : 
        {{#each film.typeFilm}}
             <a href="/typefilm/{{name}}">
                <small>{{name}}</small> 
            </a>   
                {{/each}}
        </h3>    
    </div>


<button class="btn btn-info" data-toggle="modal" data-target="#fsModal"> Bande Annonce </button>
{{#if user}}
<a href="{{film.streamlink}}"><button class="btn btn-success"> Streaming </button></a>
<a href="{{film.downlink}}"><button class="btn btn-success"> Télécharger </button></a>
{{else}}
<h3>Connectez vous pour télécharger ou regarder le film</h3>
{{/if}}








<!-- view modal -->

<!-- modal -->
<div id="fsModal" class="modal animated bounceIn"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myModalLabel"
     aria-hidden="true">

  <!-- dialog -->
  <div class="modal-dialog">

    <!-- content -->
    <div class="modal-content">

      <!-- header -->
      <div class="modal-header">
        <h1 id="myModalLabel"
            class="modal-title">
          {{film.title}}
        </h1>
      </div>
      <!-- header -->
      
      <!-- body -->
      <div class="modal-body">
                    <iframe id="trailer-ytb-video" src="{{film.trailer}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
      <!-- body -->

      <!-- footer -->
      <div class="modal-footer">
        <button class="btn btn-danger"
                data-dismiss="modal">
          close
        </button>
        
      </div>
      <!-- footer -->

    </div>
    <!-- content -->

  </div>
  <!-- dialog -->

</div>
<!-- modal -->












<div id="trailer-ytb" class="modal animated bounceIn" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div id="trailer-ytb-dialog" class="modal-dialog">

        <div id="trailer-ytb-content" class="modal-content">
            <h2>Saaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</h2>
        </div>
    </div>
</div>





<div class="modal" id="trailer-ytb" role="dialog">
    <div id="trailer-ytb-content" class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
             <iframe src="{{film.trailer}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
       </div>
    </div>
</div>


</div>

<button type="btn btn-light" id="messageshow" onclick="show_comments('comment-table', 'messageshow', 'messagehide')"> Afficher les commentaires <span class="caret"></span></button>
<button type="btn btn-light" id="messagehide" onclick="show_comments('comment-table', 'messageshow', 'messagehide')"> Masquer les commentaires <span class="caret caret-dropup"></span></button>

<table class="table" id="comment-table">
            <thead style="width:100%">
                <tr>
                <th scope="col">Nom d'utilisateur</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Note</th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {{#each list_review}}
            <tr>
                <td>{{idUser.firstname}} {{idUser.lastname}}</td>
                <td>{{review}}</td>
                <td>{{grade}}</td>
                {{#if user.isAdmin}}
                <td><a href="/review/delete/{{_id}}">Supprimer l'avis</a></td>
                {{/if}}
            </tr>
            {{/each}}
            </tbody>

</table>

</div>

