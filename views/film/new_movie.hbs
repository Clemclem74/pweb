{% extends "layout.html" %}
{% block content %}

{% for e in errors %}
<div class="alert alert-danger" role="alert">
       {{e.msg}}
</div>
{% endfor %}

<form method="POST" action="/new" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Titre</label>
        <input type="text" id="title" name="title" class="form-control" >
    </div>
    <div class="form-goup">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" ></textarea>
    </div>
    <div class="form-group">
            <label for="title">Lien de Bande Annonce</label>
            <input type="text" id="trailer" name="trailer" class="form-control" >
    </div>
    <div class="form-group">
            <label for="title">Lien de téléchargement</label>
            <input type="text" id="downlink" name="downlink" class="form-control" >
    </div>
    <div class="form-group">
            <label for="title">Lien de streaming</label>
            <input type="text" id="streamlink" name="streamlink" class="form-control" >
    </div>
    
    <div class="form-group">
        {% for t in typefilm %}
        <label>
            <input type="checkbox" name="typeFilm" value="{{t._id}}">
            {{ t.name }}
        </label>
        {% endfor %}
    </div>

    <div class="form-goup">
            <label for="picture">Image</label>
            <input type="file" id="file" name="file">
    </div>

    <input type="submit" class="btn btn-success" value="Save">
</form>
{% endblock %}