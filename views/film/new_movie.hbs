
{{#each errors}}
<div class="alert alert-danger" role="alert">
       {{msg}}
</div>
{{/each}}

<form method="POST" action="/new">
    <div class="form-group">
        <label for="title">Titre</label>
        <input type="text" id="title" name="title" class="form-control" >
    </div>
    <div class="form-goup">
        <label for="description">Description</label>
        <textarea id="description-new" name="description" class="form-control" ></textarea>
    </div>
    <div class="form-goup">
        <label for="duration">Durée</label>
        <input type="number" id="duration" name="duration" class="form-control" >
    </div>
    <div class="form-goup">
        <label for="releaseYear">Année de sortie</label>
        <input type="number" id="releaseYear" name="releaseYear" class="form-control" >
    </div>
    <div class="form-group">
            <label for="title">Lien de Bande Annonce</label>
            <input type="text" id="trailer" name="trailer" class="form-control" >
    </div>
    <div class="form-group">
            <label for="title">Lien de téléchargement</label>
            <input type="text" id="downlink" name="downlink" class="form-control" >
    </div>
    <div class="form-group">
            <label for="title">Lien de streaming</label>
            <input type="text" id="streamlink" name="streamlink" class="form-control" >
    </div>
    
    <div class="form-group">
        {{#each typefilm}}
        <label>
            <input type="checkbox" name="typeFilm" value="{{_id}}">
            {{name}} 
        </label>
        {{/each}}
    </div>

    <div class="form-goup">
            <label for="picture">Image</label>
            <input type="file" id="picture" name="picture">
    </div>

    <input type="submit" class="btn btn-success" value="Enregistrer">
</form>
