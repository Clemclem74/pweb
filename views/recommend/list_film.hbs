<link rel="stylesheet" href="/css/film.css">

    <div id="container-page" class="container">

{{#unless film}}
<h1>Vous n'avez pas de recommandations</h1>
{{/unless}}

      <h1>Vos recommandations :</h1>

{{#each film }} 

	<div class="movie-card-1" id="movies-homepage">
	<a href="/details/{{_id}}">
	<div style="background-image: url('/uploads/{{idFilm.picture}}')" class="movie-header-1" id="movie-picture">
	</div>
    </a>
	<div class="movie-content-1">
		<div class="movie-content-header-1">
			<a href="#">
				<h3 class="movie-title-1">{{idFilm.title}}</h3>
			</a>
		</div>
		<div class="movie-info-1">
			<div class="info-section-1">
				<label id="TypeLabel">Recommand√© par :  </label>
				<span><small>{{idUserFrom.firstname}} {{idUserFrom.lastname}}</small></span>
			</div>
		</div>
	</div>
</div>


            {{/each}}
    </div> 
    
    <script src="/js/jquery-1.11.1.min.js"></script>
    




